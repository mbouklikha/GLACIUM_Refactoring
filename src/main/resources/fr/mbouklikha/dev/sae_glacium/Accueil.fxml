<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.mbouklikha.dev.sae_glacium.controller.AccueilController"
            prefWidth="400" prefHeight="300" style="-fx-background-image: url('/fondAccueil.jpg');
                   -fx-background-size: cover;">


    <Text text="GLACIUM" layoutX="410" layoutY="100"
          style="-fx-font-size: 60px; -fx-font-family: 'Copperplate'; -fx-fill: white;">
        <effect>
            <DropShadow radius="5" offsetX="3" offsetY="3" color="black" />
        </effect>
    </Text>

    <Button text="Jouer" layoutX="530" layoutY="270" fx:id="btnJouer" />

    <Text text="Dans les confins glacés de Glacium, l'aventure vous appelle... Explorez un monde gelé, récoltez des ressources précieuses, et luttez pour survivre face aux morsures du froid éternel. Seul le sorcier légendaire détient la clé d'une ressource rare,  capable de terrasser le redoutable Yéti. Saurez-vous accomplir cette quête et sauver Glacium ?"
          layoutX="300" layoutY="400" wrappingWidth="520"
          style="-fx-font-size: 18px; -fx-font-family: 'Arial'; -fx-fill: white; -fx-text-alignment: center;">
        <effect>
            <DropShadow radius="3" offsetX="2" offsetY="2" color="black" />
        </effect>
    </Text>


</AnchorPane>
